<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <solid android:color="#5368c4" />
    <!--设置渐变-->
    <gradient android:startColor="#5368c4"
        android:endColor="#83c2ea"
        android:angle="0"/>
    <!--angle控制渐变的方向 , 360是正方形的上方，0是正方形的右边-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="10dp" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
</shape>